{
  "manifest_version": 2,

  "name": "Brower history recorder",
  "description": "This extension records browser history",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "history",
    "tabs"
  ],
  "background": {
    "persistent": false,
    "scripts": ["record_history.js"]
  }
}
